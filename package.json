{
	"name": "react-snake-game",
	"homepage": "http://juvsqz.github.io/react-snake-game",
	"description": "A simple snake game built with React JS (CRA) and socket.io",
	"version": "0.1.0",
	"keywords": [
		"snake-game",
		"reactjs",
		"cra",
		"html5",
		"socketio"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/juvsqz/react-snake-game.git"
	},
	"bugs": {
		"url": "https://github.com/juvsqz/react-snake-game/issues"
	},
	"author": {
		"name": "Julius L. Vasquez",
		"email": "juvsqz@gmail.com"
	},
	"scripts": {
		"build:server": "rm -rf dist/server && tsc --project ./src/server/tsconfig.json",
		"start:server": "node dist/server/index.js",
    "dev:server": "nodemon",
    "deploy": "yarn build && gh-pages -d build",
		"build": "REACT_APP_SOCKET_SERVER=https://juvsqz-react-snake-game.herokuapp.com; react-scripts build",
		"test": "react-scripts test",
		"lint": "yarn lint:scripts && yarn lint:styles",
		"lint:scripts": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
		"lint:styles": "stylelint 'src/**/*.{css,sass,scss,less}'",
		"heroku-postbuild": "yarn build:server"
	},
	"dependencies": {
		"express": "^4.17.1",
		"socket.io": "^3.1.0",
		"socket.io-client": "^3.1.0",
		"ts-node": "^9.1.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.9",
		"@types/node": "^14.0.27",
		"@types/react": "^16.9.44",
		"@types/react-dom": "^16.9.8",
		"@types/react-router-dom": "^5.1.5",
		"@types/react-test-renderer": "^16.9.3",
		"babel-plugin-module-resolver": "^4.0.0",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-prettier": "^3.1.4",
		"express": "^4.17.1",
		"gh-pages": "^3.1.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"nodemon": "^2.0.7",
		"prettier": "^2.0.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.2.0",
		"react-scripts": "3.4.1",
		"react-test-renderer": "^16.13.1",
		"typescript": "^3.9.7"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"./src/**/*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		],
		"./src/**/*.{css,sass,scss,less}": [
			"stylelint --fix"
		],
		"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!<rootDir>/node_modules/"
		],
		"coverageReporters": [
			"lcov"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"engines": {
		"node": "^12.16.3",
		"yarn": "1.22.4"
	},
	"private": true,
	"license": "UNLICENSED"
}
